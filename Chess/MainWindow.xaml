<Window x:Class="Chess.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chess"
        mc:Ignorable="d"
        Title="Chess" Height="722" Width="960" Background="Tan" ResizeMode="CanMinimize">
    <Grid>

        <!--Board-->
        <Border Background="NavajoWhite" BorderThickness="1" BorderBrush="Black" HorizontalAlignment="Left" Height="613" Margin="31,52,0,0" VerticalAlignment="Top" Width="645">
            <Grid>
                <Label Content="8" HorizontalAlignment="Left" Margin="32,45,0,0" VerticalAlignment="Top" FontSize="18"/>
                <Label Content="7" HorizontalAlignment="Left" Margin="32,111,0,0" VerticalAlignment="Top" FontSize="18"/>
                <Label Content="6" HorizontalAlignment="Left" Margin="32,177,0,0" VerticalAlignment="Top" FontSize="18"/>
                <Label Content="5" HorizontalAlignment="Left" Margin="32,243,0,0" VerticalAlignment="Top" FontSize="18"/>
                <Label Content="4" HorizontalAlignment="Left" Margin="32,309,0,0" VerticalAlignment="Top" FontSize="18"/>
                <Label Content="3" HorizontalAlignment="Left" Margin="32,375,0,0" VerticalAlignment="Top" FontSize="18"/>
                <Label Content="2" HorizontalAlignment="Left" Margin="32,441,0,0" VerticalAlignment="Top" FontSize="18"/>
                <Label Content="1" HorizontalAlignment="Left" Margin="32,507,0,0" VerticalAlignment="Top" FontSize="18"/>
                <Label Content="A" HorizontalAlignment="Left" Margin="80,560,0,0" VerticalAlignment="Top" FontSize="18"/>
                <Label Content="B" HorizontalAlignment="Left" Margin="146,560,0,0" VerticalAlignment="Top" FontSize="18"/>
                <Label Content="C" HorizontalAlignment="Left" Margin="212,560,0,0" VerticalAlignment="Top" FontSize="18"/>
                <Label Content="D" HorizontalAlignment="Left" Margin="278,560,0,0" VerticalAlignment="Top" FontSize="18"/>
                <Label Content="E" HorizontalAlignment="Left" Margin="344,560,0,0" VerticalAlignment="Top" FontSize="18"/>
                <Label Content="F" HorizontalAlignment="Left" Margin="410,560,0,0" VerticalAlignment="Top" FontSize="18"/>
                <Label Content="G" HorizontalAlignment="Left" Margin="475,560,0,0" VerticalAlignment="Top" FontSize="18"/>
                <Label Content="H" HorizontalAlignment="Left" Margin="542,560,0,0" VerticalAlignment="Top" FontSize="18"/>
                <Border BorderThickness="1" BorderBrush="Black" HorizontalAlignment="Center" Height="530" VerticalAlignment="Top" Width="530" Margin="0,28,0,0">
                    <Grid x:Name="Board"/>
                </Border>

            </Grid>
        </Border>

        <!--Tabs Control-->
        <Border BorderThickness="1" BorderBrush="Black" HorizontalAlignment="Left" Height="613" Margin="697,52,0,0" VerticalAlignment="Top" Width="224">
            <TabControl>
                <TabItem Header="Game settings">
                    <Grid  Background="NavajoWhite">


                        <!--Create Box-->
                        <Border x:Name="CreationBorder" BorderThickness="1" BorderBrush="Black" HorizontalAlignment="Center" Height="157" Margin="0,81,0,0" VerticalAlignment="Top" Width="196">
                            <Grid>
                                <Label Content="Choose figure" HorizontalAlignment="Left" Height="26" Margin="49,10,0,0" VerticalAlignment="Top" Width="88" FontFamily="Segoe UI Semibold"/>
                                <ComboBox x:Name="ChooseFigureComboBox" HorizontalAlignment="Center" Height="20" Margin="0,41,0,0" VerticalAlignment="Top" Width="174"/>
                                <Label Content="Letter" HorizontalAlignment="Left" Height="26" Margin="5,66,0,0" VerticalAlignment="Top" Width="44" FontFamily="Segoe UI Semibold"/>
                                <ComboBox x:Name="ChooseLetterComboBox" HorizontalAlignment="Left" Height="20" Margin="11,93,0,0" VerticalAlignment="Top" Width="38"/>
                                <Label Content="Number" HorizontalAlignment="Left" Height="26" Margin="62,67,0,0" VerticalAlignment="Top" Width="62" FontFamily="Segoe UI Semibold"/>
                                <ComboBox x:Name="ChooseNumberComboBox" HorizontalAlignment="Left" Height="20" Margin="68,93,0,0" VerticalAlignment="Top" Width="38"/>
                                <CheckBox x:Name="BlackFigureCeckBox" Content="Black" HorizontalAlignment="Left" Margin="129,78,0,0" VerticalAlignment="Top"/>
                                <CheckBox x:Name="WhiteFigureCeckBox" Content="White" HorizontalAlignment="Left" Margin="129,98,0,0" VerticalAlignment="Top"/>
                                <Button x:Name="CreateBtn" Background="Goldenrod" Content="Create" HorizontalAlignment="Center" Margin="0,123,0,0" VerticalAlignment="Top" Width="174" Height="22"/>
                            </Grid>
                        </Border>

                        <!--Logs-->
                        <RichTextBox x:Name="Logs" Background="FloralWhite" HorizontalAlignment="Center" Height="317" Margin="0,256,0,0" VerticalAlignment="Top" Width="196"/>

                        <!--Color Pick-->
                        <Image HorizontalAlignment="Left" Height="43" Margin="21,18,0,0" VerticalAlignment="Top" Width="72"/>
                        <Image HorizontalAlignment="Left" Height="29" Margin="150,18,0,0" VerticalAlignment="Top" Width="49"/>

                    </Grid>
                </TabItem>
                <TabItem Header="Account">
                    <Grid  Background="NavajoWhite" >
                        <Border BorderThickness="1" BorderBrush="Black">
                            <Grid>


                                <!--SignIn Box-->
                                <Border x:Name="SignInBox" BorderThickness="1" BorderBrush="Black" Margin="9,191,9,191" Visibility="Visible">
                                    <Grid>
                                        <Label Content="Sign in" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="16"/>
                                        <Label Content="Login" HorizontalAlignment="Left" Margin="10,27,0,0" VerticalAlignment="Top" Width="46" FontSize="14"/>
                                        <TextBox x:Name="LoginBox" HorizontalAlignment="Center" Margin="0,53,0,0" TextWrapping="Wrap" FontSize="14" VerticalAlignment="Top" Width="174" Height="25"/>
                                        <Label Content="Password" HorizontalAlignment="Left" Margin="10,76,0,0" VerticalAlignment="Top" FontSize="14"/>
                                        <PasswordBox x:Name="PassBox" HorizontalAlignment="Center" Margin="0,105,0,0" VerticalAlignment="Top" Width="174" Height="25" FontSize="14"/>
                                        <Button x:Name="LogInButton" Background="Goldenrod" Content="Log in" HorizontalAlignment="Center" Margin="0,138,0,0" VerticalAlignment="Top" Width="76" Height="26" Click="LogInButton_Click"/>
                                        <Button x:Name= "ChangeViewRegistration" BorderBrush="Transparent" Background="NavajoWhite" HorizontalAlignment="Center" Margin="0,169,0,0" VerticalAlignment="Top" Width="142" Click="ChangeViewRegistration_Click">
                                            <TextBlock TextDecorations="Underline">If you dont have account</TextBlock>
                                        </Button>
                                    </Grid>
                                </Border>
                                <Border x:Name="RegistrationBox" BorderThickness="1" BorderBrush="Black" Margin="9,321,9,10" Visibility="Hidden">
                                    <Grid>
                                        <Label Content="Registration" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="16"/>
                                        <Label Content="Login" HorizontalAlignment="Left" Margin="10,27,0,0" VerticalAlignment="Top" Width="46" FontSize="14"/>
                                        <TextBox x:Name="RegisterLoginBox" HorizontalAlignment="Center" Margin="0,53,0,0" TextWrapping="Wrap" FontSize="14" VerticalAlignment="Top" Width="174" Height="25"/>
                                        <Label Content="Password" HorizontalAlignment="Left" Margin="10,76,0,0" VerticalAlignment="Top" FontSize="14"/>
                                        <PasswordBox x:Name="RegisterFirstPassBox" HorizontalAlignment="Center" Margin="0,105,0,0" VerticalAlignment="Top" Width="174" Height="25" FontSize="14"/>
                                        <Label Content="Password" HorizontalAlignment="Left" Margin="10,130,0,0" VerticalAlignment="Top" FontSize="14"/>
                                        <PasswordBox x:Name="RegisterSecondPassBox" HorizontalAlignment="Center" Margin="0,159,0,0" VerticalAlignment="Top" Width="174" Height="25" FontSize="14"/>
                                        <Button x:Name="RegistrationButton" Background="Goldenrod" Content="Registration" HorizontalAlignment="Center" Margin="0,194,0,0" VerticalAlignment="Top" Width="80" Height="26" Click="RegistrationButton_Click"/>
                                        <Button x:Name="ChangeViewLogin" BorderBrush="Transparent" Background="NavajoWhite" HorizontalAlignment="Center" Margin="0,220,0,0" VerticalAlignment="Top" Width="142" Click="ChangeViewLogin_Click">
                                            <TextBlock TextDecorations="Underline">Back to login box</TextBlock>
                                        </Button>
                                    </Grid>
                                </Border>
                                <Border x:Name="PersonalAreaBox" BorderThickness="1" BorderBrush="Black" HorizontalAlignment="Center" Height="561" VerticalAlignment="Center" Width="194" Visibility="Hidden">
                                    <Grid>
                                        
                                        <!--Last Matches--> 
                                        <Label Content="Last Matches" HorizontalAlignment="Center" Height="31" Margin="0,354,0,0" VerticalAlignment="Top" Width="106" FontSize="16"/>
                                        <RichTextBox Background="FloralWhite" HorizontalAlignment="Center" Height="159" Margin="0,390,0,0" VerticalAlignment="Top" Width="172">
                                        </RichTextBox>
                                        
                                        <!--User Info-->
                                        <Label x:Name="UserNameLabel" Content="Name" HorizontalAlignment="Center" Height="35" Margin="0,10,0,0" VerticalAlignment="Top" Width="64" FontSize="19"/>
                                        <Label x:Name="UserIdLabel" Content="id" HorizontalAlignment="Left" Height="30" Margin="53,57,0,0" VerticalAlignment="Top" Width="30" FontSize="16"/>
                                        <Label Content="ID - " HorizontalAlignment="Left" Height="30" Margin="10,57,0,0" VerticalAlignment="Top" Width="38" FontSize="16"/>
                                        <Label x:Name="UserPartyCountLabel" Content="party" HorizontalAlignment="Center" Height="30" Margin="0,92,0,0" VerticalAlignment="Top" Width="56" FontSize="16"/>
                                        <Label Content="Party - " HorizontalAlignment="Left" Height="30" Margin="10,92,0,0" VerticalAlignment="Top" Width="58" FontSize="16"/>
                                        <Label x:Name="UserWinCountLabel" Content="win" HorizontalAlignment="Left" Height="30" Margin="64,127,0,0" VerticalAlignment="Top" Width="56" FontSize="16"/>
                                        <Label Content="Win - " HorizontalAlignment="Left" Height="30" Margin="10,127,0,0" VerticalAlignment="Top" Width="58" FontSize="16"/>
                                        <Label x:Name="UserLoseCountLabel" Content="lose" HorizontalAlignment="Center" Height="30" Margin="0,162,0,0" VerticalAlignment="Top" Width="56" FontSize="16"/>
                                        <Label Content="Lose - " HorizontalAlignment="Left" Height="30" Margin="10,162,0,0" VerticalAlignment="Top" Width="58" FontSize="16"/>
                                        <Label x:Name="UserDrawCountLabel" Content="draw" HorizontalAlignment="Center" Height="30" Margin="0,197,0,0" VerticalAlignment="Top" Width="56" FontSize="16"/>
                                        <Label Content="Draw - " HorizontalAlignment="Left" Height="30" Margin="10,197,0,0" VerticalAlignment="Top" Width="58" FontSize="16"/>
                                        
                                        <!--Statistics-->
                                        <Label Content="Win rate" HorizontalAlignment="Left" Height="30" Margin="10,244,0,0" VerticalAlignment="Top" Width="73" FontSize="14"/>
                                        <ProgressBar x:Name="WinRateBar" HorizontalAlignment="Center" Height="18" Margin="0,279,0,0" VerticalAlignment="Top" Width="172"/>
                                        <Label Content="Draw rate" HorizontalAlignment="Left" Height="30" Margin="10,296,0,0" VerticalAlignment="Top" Width="73" FontSize="14"/>
                                        <ProgressBar x:Name="DrawRateBar" HorizontalAlignment="Center" Height="18" Margin="0,326,0,0" VerticalAlignment="Top" Width="172"/>
                                        
                                    </Grid>
                                </Border>
                            </Grid>
                        </Border>
                    </Grid>

                </TabItem>
            </TabControl>
        </Border>

        <!--Top Menu-->
        <Menu HorizontalAlignment="Center" Height="23" VerticalAlignment="Top" Width="960" FontSize="13">
            <MenuItem x:Name="PlayBtn" Header="Play" Margin="7 0 0 0" Background="#00000000"/>
            <MenuItem x:Name="PauseBtn" Header="Restart"></MenuItem>
            <MenuItem x:Name="SaveBtn" Header="Save"></MenuItem>
            <MenuItem x:Name="HelpBtn" Header="Help"></MenuItem>
            <MenuItem Header="Mode">
                <MenuItem x:Name="EndGameModeBtn" Header="Endgame"></MenuItem>
                <MenuItem x:Name="HorsepathModeBtn" Header="Horsepath"></MenuItem>
                <MenuItem x:Name="PvpModeBtn" Header="PVP"></MenuItem>
            </MenuItem>
            <MenuItem Header="About">
                <MenuItem x:Name="LinkedInButton" Header="LinkedIn"></MenuItem>
                <MenuItem x:Name="GitHubButton" Header="GitHub"></MenuItem>
            </MenuItem>
        </Menu>

    </Grid>
</Window>
